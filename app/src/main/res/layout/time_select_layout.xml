<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#aacccccc">

    <LinearLayout
        android:id="@+id/animation_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/x_time_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/x_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="年"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/x_month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="月"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/x_day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="日"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/x_hour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="时"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/x_minute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="分"
                android:textSize="18dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_gravity="bottom"
            android:background="#ffffffff"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.witdget.CusScrollPickerView
                android:id="@+id/year_pick"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                app:cus_max_text_size="24dp"
                app:cus_min_text_size="20dp"
                app:cus_visible_item_count="5"/>

            <com.witdget.CusScrollPickerView
                android:id="@+id/month_pick"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                app:cus_max_text_size="24dp"
                app:cus_min_text_size="20dp"
                app:cus_visible_item_count="5"/>

            <com.witdget.CusScrollPickerView
                android:id="@+id/day_pick"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                app:cus_max_text_size="24dp"
                app:cus_min_text_size="20dp"
                app:cus_visible_item_count="5"/>

            <com.witdget.CusScrollPickerView
                android:id="@+id/hour_pick"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                app:cus_max_text_size="24dp"
                app:cus_min_text_size="20dp"
                app:cus_visible_item_count="5"/>

            <com.witdget.CusScrollPickerView
                android:id="@+id/minute_pick"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                app:cus_max_text_size="24dp"
                app:cus_min_text_size="20dp"
                app:cus_visible_item_count="5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/all_angle_stroke_shape_normal">

            <TextView
                android:id="@+id/cancel"
                style="@style/text_15_gray"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/none_angle_shape_selector"
                android:gravity="center"
                android:text="取消"/>

            <View
                style="@style/ver_cell_line"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/confirm"
                style="@style/text_15_blue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:background="@drawable/none_angle_shape_selector"
                android:gravity="center"
                android:text="确定"/>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>